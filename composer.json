{
    "name": "micheleorselli/arkitect",
    "description": "Enforce architectural constraints in your PHP applications",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Pietro Campagnano",
            "email": "hello@pietro.camp"
        },
        {
            "name": "Patrick Luca Fazzi",
            "email": "patrick91@live.it"
        },
